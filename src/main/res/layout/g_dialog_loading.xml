<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/g_loading_circle_size"
        android:layout_height="@dimen/g_loading_circle_size"
        android:layout_centerInParent="true"
        android:contentDescription="@string/gnone"
        android:scaleType="centerInside"
        android:src="@drawable/g_loading_logo" />

    <ImageView
        android:id="@+id/imgDialog"
        android:layout_width="@dimen/g_loading_circle_size"
        android:layout_height="@dimen/g_loading_circle_size"
        android:layout_centerInParent="true"
        android:contentDescription="@string/gnone"
        android:scaleType="centerInside"
        android:src="@drawable/g_loading_circle" />
</RelativeLayout>